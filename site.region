<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Campaign Together</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {squarespace-headers}
    <script>/* Must be below squarespace-headers */(function(){var e='ontouchstart'in window||navigator.msMaxTouchPoints;var t=document.documentElement;if(!e&&t){t.className=t.className.replace(/touch-styles/,'')}})()
    </script>
  </head>
  <body class="body-white">
    <div class="header">
      <!-- Hero -->
      <div class="top-image"><img src="/assets/img/header-top.png" /></div>
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="hero-box">
              <img class="logo" src="/assets/img/logo.svg" />
              <h2 class="title">{title}</h2>
            <!--  <p class="lead">
                <squarespace:block-field id="lead" columns="12"/>
              </p>
            -->
            </div>
          </div>
        </div>
      </div>
      <div class="bottom-image"><img src="/assets/img/header-bottom.png" /></div>

      <!-- Main container -->
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="narrow-container about">
              {squarespace.main-content}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="top-image"><img src="/assets/img/footer.png" /></div>
      <img class="logo" src="/assets/img/logo.svg" />

      <div class="social-media">
        <div class="icon"><a href="https://www.facebook.com/campaigntogether/"><img src="/assets/img/facebook.svg" /></a></div>
        <!-- <div class="icon"><a href=""><img src="/assets/img/instagram.svg" /></a></div>-->
        <div class="icon"><a href="https://twitter.com/CampaignTgthr"><img src="/assets/img/twitter.svg" /></a></div>
      </div>

      <div class="imprint">
        <div class="left">Â© 2018. All rights reserved</div>
        <div class="right">Website by <a href="https://www.hannahpilbeam.co.uk" class="author">Hannah Pilbeam</a></div>
      </div>
    </div>

    <squarespace:script src="site-bundle.js" combo="false" />
    {squarespace-footers}
  </body>
</html>
